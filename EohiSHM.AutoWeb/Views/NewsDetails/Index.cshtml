                "bdMiniList": false,
                "bdPic": "http://localhost/centlight/public/attachment/201410/24/14/5449ef39574f5_282x220.jpg", /* 此处填写要分享图片地址 */
                "bdStyle": "0",
                "bdSize": "16"
            },
